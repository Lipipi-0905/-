<script>
    var list = document.querySelector('.act')
    var uls = document.querySelector('.uls')

    list.addEventListener('click', () => {
        if (uls.style.display == 'none') {
            uls.style.display = 'block'
        } else {
            uls.style.display = 'none'
        }


    })
</script>

